<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.park.monitoring.mapper.BoardMapper">
    <select id="getAllBoards" resultType="com.park.monitoring.model.Board">
        SELECT * from board;
    </select>

    <select id="getBoardById" parameterType="long" resultType="com.park.monitoring.model.Board">
        SELECT * from board where id=#{id};
    </select>

    <insert useGeneratedKeys="true" keyProperty="id"
            id="insertBoard" parameterType="com.park.monitoring.model.Board">

        INSERT INTO board (title, content) VALUES (#{title}, #{content})
    </insert>

    <update id="updateBoard" parameterType="com.park.monitoring.model.Board" >
        UPDATE board SET title=#{title}, content=#{content} where id=#{id}
    </update>

    <delete id="deleteBoard" parameterType="com.park.monitoring.model.Board">
        DELETE from board where id=#{id}
    </delete>
    <select id="getNextAutoIncrementNum" resultType="java.lang.Long">
        SELECT AUTO_INCREMENT
        FROM information_schema.TABLES
        WHERE TABLE_SCHEMA = 'test'
        AND TABLE_NAME = 'board'
    </select>
</mapper>
